{
    "name": "ts-api",
    "version": "2.1.0",
    "description": "NojeJs Rest API using TDD, Clean architecture and Typescript",
    "main": "index.js",
    "scripts": {
        "start": "node dist/main/server.js",
        "build": "rimraf dist && tsc -p tsconfig-build.json",
        "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
        "up": "npm run build && docker-compose up -d",
        "down": "docker-compose down",
        "dev": "sucrase-node src/main/server.ts",
        "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
        "test:verbose": "jest --passWithNoTests",
        "test:integration": "npm test -- --watch -c jest-integration-config.ts",
        "test:integrationdebug": "npm test -- --watch --silent=false -c jest-integration-config.ts",
        "test:unit": "npm test -- --watch -c jest-unit-config.ts",
        "test:staged": "jest --passWithNoTests",
        "test:ci": "npm test -- --coverage",
        "test:clg": "npm test -- --watch --silent=false -c jest-unit-config.ts"
    },
    "keywords": [],
    "author": "Jo√£o Pedro",
    "license": "ISC",
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/mongodb": "^4.0.7",
        "@types/node": "^20.10.8",
        "@types/supertest": "^6.0.2",
        "@types/validator": "^13.11.8",
        "@typescript-eslint/eslint-plugin": "^6.18.1",
        "@typescript-eslint/parser": "^6.18.1",
        "eslint": "^8.56.0",
        "git-commit-msg-linter": "^5.0.6",
        "jest": "^29.7.0",
        "mockdate": "^3.0.5",
        "rimraf": "^5.0.5",
        "sucrase": "^3.35.0",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "@types/dotenv": "^8.2.0",
        "bcrypt": "^5.1.1",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "fast-glob": "^3.3.2",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "mongodb": "^6.3.0",
        "nodemon": "^3.0.3",
        "validator": "^13.11.0"
    },
    "engines": {
        "node": "18.16.0"
    },
    "_moduleAliases": {
        "@": "dist"
    }
}
